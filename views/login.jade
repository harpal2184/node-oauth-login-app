doctype html
html
  head
    meta(charset='UTF-8')
    title Bootstrap Snippet: Login Form
    link(rel='stylesheet prefetch', href='http://netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css')
    link(rel='stylesheet', href='../stylesheets/style.css')
  body
    .wrapper
      form.form-signin(method='post', action='users/login')
        h2.form-signin-heading Please login
        input.form-control(type='text', name='username', placeholder='Username', required='', autofocus='')
        input.form-control(type='password', name='password', placeholder='Password', required='')
        label.checkbox
          input#rememberMe(type='checkbox', value='remember-me', name='rememberMe')
          |  Remember me
        button.btn.btn-lg.btn-primary.btn-block(type='submit') Login
